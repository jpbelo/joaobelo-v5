h1
	font-family 'Lobster', cursive
	font-weight 400
	color c_black
h2
	font-family 'Crimson Text', serif
	font-weight 600
	color c_black
h3, p, li
	font-family 'Open Sans', sans-serif
	font-weight 300
	color c_black
	line-height 1.4
	&>b
		font-weight 700
p
	line-height 1.4
	a
		border-bottom 1px solid c_yellow
		transition border-color .3s ease-in-out
		&:hover
			border-bottom 1px solid c_red

a
	font inherit
	color inherit

#pageWrap
	display grid
	grid-auto-rows minmax(180px, auto)

	@media (min-width:1201px)
		grid-template-columns 5% repeat(8, 1fr) 5%
		grid-template-areas ". . . . . . . . . ." \
							". . . . . . . . . ." \
							". . . . . . about about about ." \
							". . . . . . about about about ." \
							". . projects projects . . about about about ." \
							". . projects projects . . . . . ." \
							". . projects projects . highlights highlights . . ." \
							". . . . . . . . . ." \
							"footer footer footer footer footer footer footer footer footer footer"

	@media (max-width:1200px) and (min-width:961px)
		grid-template-columns 5% repeat(8, 1fr) 5%
		grid-template-areas ". . . . . . . . . ." \
							". . . . . . . . . ." \
							". . . . . about about about about about" \
							". . . . . about about about about about" \
							". projects projects projects . about about about about about" \
							". projects projects projects . . . . . ." \
							". projects projects projects . . highlights highlights highlights ." \
							". . . . . . . . . ." \
							"footer footer footer footer footer footer footer footer footer footer"

	@media (max-width:960px)
		grid-auto-rows minmax(180px, auto)
		grid-template-columns 5% repeat(8, 1fr) 5%
		grid-template-areas ". . . . . . . . . ." \
							". about about about about about about about about about" \
							". about about about about about about about about about" \
							". projects projects projects projects projects projects projects . ." \
							". highlights highlights highlights highlights highlights highlights highlights . ." \
							"footer footer footer footer footer footer footer footer footer footer"



	#banner
		grid-column 1 / 9
		grid-row 1 / 4
		background-image linear-gradient(-180deg, c_yellow 0, c_red 90%)
		display grid
		grid-template-columns repeat(12, 1fr)
		@media (max-width:960px)
			grid-column 1 / 11
			grid-row 1 / 3

		canvas
			position absolute

		#logoWrap
			position fixed
			left 5%
			top 50px
			width 100px
			border 1px solid transparent
			@media (max-width:960px)
				display none
				img
					width 100%



	#title
		grid-column 2/7
		grid-row 1/3
		align-self center
		text-align left
		z-index 2
		@media (max-width:960px)
			grid-column 2/10
			grid-row 1/2
			align-self end
			margin 75px 0
		h1
			color white
			font-size 70px
			margin-bottom 20px
		h3
			color white
			font-size 16px



	#about
		grid-area about
		align-self start
		padding 50px
		background-color alpha(white, .8)
		z-index 2
		@media (max-width:960px)
			margin-bottom 50px
		h2
			font-size 40px
			margin-bottom 30px
		p
			font-size 16px
			margin-bottom 20px



	#projects
		grid-area projects
		@media (max-width:960px)
			margin-bottom 100px
			margin-left 50px
		h2
			font-size 40px
			margin-bottom 40px
		ul
			max-height 600px
			overflow-y scroll
			li
				margin-bottom 30px
				.title
					margin-bottom 15px
					h3
						font-weight 700
						font-size 16px
						a
							font-weight 300
							font-size 12px
							margin-left 20px
							color c_red
							vertical-align top
							&:hover
								color c_yellow
				.description
					margin-bottom 10px
					p
						font-size 14px
				.tools
					margin-bottom 10px
					p
						font-size 12px
						color c_grey
				.date
					p
						color c_grey
						font-size 12px



	#highlights
		grid-area highlights
		@media (max-width:960px)
			margin-bottom 100px
			margin-left 50px
		h2
			font-size 40px
			margin-bottom 40px
		ul
			max-height 500px
			overflow-y scroll
			li
				margin-bottom 30px
				.title
					margin-bottom 15px
					h3
						font-weight 700
						font-size 16px
						a
							font-weight 300
							font-size 12px
							margin-left 20px
							color c_red
							vertical-align top
							&:hover
								color c_yellow
				.description
					margin-bottom 10px
					p
						font-size 14px
				.tools
					margin-bottom 10px
					p
						font-size 12px
						color c_grey
				.date
					p
						color c_grey
						font-size 12px



	footer
		grid-area footer
		background-color c_black
		ul
			margin 100px auto
			text-align center
			li
				font-size 16px
				display inline-block
				margin 0 50px
				color white
				@media (max-width:960px)
					margin 0 20px




	.clearFader
		width 100%
		height 80px
		margin-top -80px
		position relative
		bottom 0
		background-image linear-gradient(-180deg, alpha(white, 0) 0, white 100%)
